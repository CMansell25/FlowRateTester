from machine import Pin
import time

# Define all GPIO pins from 0 to 28 (excluding 23, 24, 25 if you only want usable ones)
gpio_pins = [Pin(i, Pin.OUT) for i in range(29)]

print("Starting GPIO Pin Test...")

try:
    while True:
        for pin in gpio_pins:
            print(f"Toggling GPIO {pin.id()}")
            pin.value(1)
            time.sleep(0.2)
            pin.value(0)
            time.sleep(0.2)

except KeyboardInterrupt:
    print("Test stopped by user.")
    for pin in gpio_pins:
        pin.value(0)