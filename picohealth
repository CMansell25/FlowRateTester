from machine import Pin, ADC
import time

# Onboard LED
led_onboard = Pin(25, Pin.OUT)
# External LED on GP15
led_external = Pin(15, Pin.OUT)
# ADC pin (e.g. GP26 / ADC0)
adc = ADC(Pin(26))

print("Starting Pico Full Test...")

try:
    while True:
        # Blink onboard LED
        led_onboard.toggle()

        # Blink external LED
        led_external.value(1)
        time.sleep(0.25)
        led_external.value(0)
        time.sleep(0.25)

        # Read ADC value
        adc_value = adc.read_u16()
        print(f"ADC Read (GP26): {adc_value}")

        # Small delay before repeating
        time.sleep(0.5)

except KeyboardInterrupt:
    print("Test stopped by user.")
    led_onboard.value(0)
    led_external.value(0)